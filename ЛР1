#include <iostream>
 
int main()
{
    const int size=10;
    int arr[size]={10,5,11,15,27,26,104,3,0,3};
    for(int i=0;i<size;i++)
    {
        std::cout<<arr[i]<<' ';
        if(arr[i] % 2 == 0)
            std::cout<<0<<std::endl;
        else
            std::cout<<arr[i]<<std::endl;
    }
    system("pause");
    return 0;
}
